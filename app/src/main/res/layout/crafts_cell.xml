    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.33"
        android:layout_marginRight="2dp"
        android:background="@drawable/homeicon_border"
        android:layout_gravity="fill_horizontal">

        <ImageView
            android:id="@+id/craft_img_one"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_carpentry"
            android:paddingTop="@dimen/margin40dp"/>
        <TextView
            android:id="@+id/craft_txt_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/carpentry"
            android:gravity="center_horizontal"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:padding="9dp"
            android:background="@drawable/text_border"
            android:textColor="@color/darkBrown"
            android:autoSizeTextType="uniform"
            android:textSize="@dimen/textSize25dp"
            android:textStyle="bold"
            android:fontFamily="cursive"/>
    </LinearLayout>

