<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelFragment"
    android:background="@drawable/backg"
    android:orientation="vertical">
    <include
        layout="@layout/back_button_level"
        android:layout_height="63dp"
        android:layout_width="match_parent"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="wrap_content"
        android:layout_height="222dp" />
    <MediaController
        android:id="@+id/mediaController"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/equipment_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/used_equepment"
                android:textSize="@dimen/textSize20dp"
                android:textColor="@color/darkBrown"/>


            <!--<ListView-->
            <!--android:id="@+id/eqipment_listview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->


            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eqipment_listview">
            </android.support.v7.widget.RecyclerView>


            <TextView
                android:id="@+id/description_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/description"
                android:textSize="@dimen/textSize20dp"
                android:textColor="@color/darkBrown"/>
            <TextView
                android:id="@+id/desc_info_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/textSize17dp"
                android:textColor="@color/black"
                android:padding="@dimen/padding13dp"
                android:lineSpacingExtra="7dp"
                android:text="jdejjejed"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>